<html>

<head>
    <title>USPTO Rally Feed</title>
    <meta http-equiv="Cache-Control" content="no-store" />

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="https://connectors.tableau.com/libs/tableauwdc-2.1.1.js"></script>
    <script src="https://connectors.tableau.com/libs/tableauwdc-2.1.latest.js" type="text/javascript"></script>
    <script src="app.js" type="text/javascript"></script>
    
<style>
td, th {
    padding: 10px;
}
table {
    width:100%;
}
</style>

</head>
<body>
        <h2>You Requested </h2>
       <br> <table class="form container-table">
            <tr class="row">    
                 <!-- Project Selector -->
                <td> 
                <h3 class="col-md-4 control-label" for="filter-key">Workspace:</h3>
                     
                    <select class="col-md-4 form-control" name="project">
                        <% Workspace.Results.forEach(function(item){%>
                            <%if(item._ref.substring(item._ref.lastIndexOf("/")+1, item._ref.length) === WorkspaceID){ %>
                                <option value = "<%= item._refObjectName %>">  <%= item._refObjectName %> </option> 
                        <% }});%>
                     </select>
                    <h3 class="col-md-4 control-label" for="filter-key">Project:</h3>
                         
                    <select class="col-md-4 form-control" name="project">
                        <% Project.Results.forEach(function(item){%>
                            <%if(item._ref.substring(item._ref.lastIndexOf("/")+1, item._ref.length) === ProjectID){ %>
                                <option value = "<%= item._refObjectName %>">  <%= item._refObjectName %> </option> 
                        <% }});%>
                     </select>
                     <form action ='/sendData' method ='post'>    
                    <button type="submit" id="sumbmit" class="btn btn-success" style="margin: 10px;">Get data</button>
                    </form>
                </td>
    </tr>
    </table>
</body>

</html>